<Window x:Class="Homework04.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework04"
        mc:Ignorable="d"
        Title="Valid Zipcodes Check" Background="Azure" BorderThickness="2" Height="216" Width="444">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="zip_textBlock" FontWeight="Bold" Margin="0,10,0,0">Enter Zipcode</TextBlock>
            <TextBox x:Name="zip_textBox" Height="20" Width="150" HorizontalAlignment="Left" Margin="0,0,0,10" TextChanged="Zip_textBox_TextChanged"/>
            <Button x:Name="submit_Button"  Content="Submit" FontWeight="Bold" HorizontalAlignment="Left" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
